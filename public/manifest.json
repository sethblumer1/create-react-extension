{
  "manifest_version": 3,
  "name": "Threadnote",
  "description": "Threadnote Chrome Extension",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/assets/js/initializeUI.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": [
    "storage", 
    "activeTab"
  ],
  "background": {
    "service_worker": "./background.global.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["/react/index.js", "/react/vendor.js", "/react/index.css"],
      "matches": ["<all_urls>"]
    }
  ]
}